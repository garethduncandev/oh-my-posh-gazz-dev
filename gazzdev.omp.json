{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "foreground": "#F3C267",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
          "properties": {
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "angular",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "#E06C75",
          "template": " \uE753 {{ .Full }} "
        },
        {
          "type": "dotnet",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "#512bd4",
          "template": " \uE77F {{ .Full }} "
        },
        {
          "type": "node",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "#6CA35E",
          "template": " \uE718 {{ .Full }} ",
          "properties": {
            "display_mode": "context"
          }
        },
        {
          "type": "npm",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffeb3b",
          "template": "\ue71e {{ .Full }} ",
          "properties": {
            "display_mode": "context"
          }
        },
        {
          "type": "aws",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "#FFA400",
          "template": " \uE7AD {{.Profile}}{{if .Region}}@{{.Region}}{{end}}",
          "properties": {
            "display_default": false
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#d4d4d4",
          "foreground_templates": ["{{ if gt .Code 0 }}#E06C75{{ end }}"],
          "template": " x{{ .Meaning }}"
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "#ffffff",
          "foreground_templates": ["{{ if gt .Code 0 }}#E06C75{{ end }}"],
          "template": " {{ .FormattedMs }} ",
          "properties": {
            "always_enabled": true,
            "style": "roundrock"
          }
        },
        {
          "type": "connection",
          "style": "plain",
          "foreground": "#8822ee",
          "powerline_symbol": "\uE0B0"
        },
        {
          "type": "time",
          "style": "accordion",
          "foreground": "#bdbdbd",
          "template": "{{ .CurrentDate | date .Format }}",
          "properties": {
            "time_format": "15:04:05"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#61AFEF",
          "template": "\ue5ff {{ .Path }}",
          "properties": {
            "style": "agnoster_short"
          }
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#E06C75",
          "template": "!"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#E06C75",
          "template": "\u276f"
        }
      ],
      "newline": true
    }
  ]
}
